<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/onboarding1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ivThumbnail">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="28sp"
            android:fontFamily="@font/bentonsans_bold"
            android:text="Find Your Comfort Food Here"
            android:padding="8dp"
            android:textColor="#09051C" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/bentonsans_medium"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="8dp"
            android:text="Here you can find a Chef or Dish for every Taste and Color. Enjoy!!!"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>